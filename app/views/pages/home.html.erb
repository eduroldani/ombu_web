<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'banner.jpg' %>);">
  <div class="container">
    <h1>Ombu <strong>Hub</strong>!</h1>
    <p></p>
    <a class="btn btn-primary" href="#">Contacto</a>
  </div>
</div>


<div class="container">

   <div class="my-3">
    <h2>Descubre los cursos de <strong>Ombu hub</strong></h2>
    <p>Tenemos cursos de para jovenes desde los 7 anios</p>
  </div>
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group mt-3">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i> Buscar
          </button>
        </div>
      <% end %>

    <div class="cards mt-3">
      <% @courses.each do |course| %>
        <div class="card" style="width: 18rem;">
          <%= image_tag "banner.jpg", class: "card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"><%= course.title.truncate(30) %></h5>
              <p class="card-text"><%= course.description.truncate(100) %></p>
              <p class="card-text"><%= course.date %></p>
              <a href="#" class="btn btn-primary">Ver Mas</a>
            </div>
          </div>
        <% end %>
    </div>

    <div class="text-center my-3 width-100">
      <%= link_to "Ver Mas Cursos", root_path, class: "btn btn-primary" %>
     </div>


</div>
